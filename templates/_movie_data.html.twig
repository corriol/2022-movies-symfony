<div class="col">
<div class="card" >

        <img src="{{ asset('images' ~ '/'~ movie.poster) | imagine_filter('my_thumb') }}" class="card-img-top" alt="{{ movie.title }}">

    <div class="card-body">
        <h5 class="card-title">{{ movie.title }} </h5>
        <p class="card-text">{{ movie.overview | slice(0, 100) }}...</p>
        <p><strong>Data d'estrena</strong>: {{ movie.releaseDate | date("d-m-Y") }}</p>
        <p><strong>Usuari</strong>: {{ movie.user.username }}</p>
        
        <a href="{{path('a_movie_edit', {id: movie.id})}}" class="btn btn-primary">editar</a>
    </div>
</div>

</div>